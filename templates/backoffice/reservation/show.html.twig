    {% if reservation.books|length > 0  %}


        <table class="table">
            <thead>
            <tr>
                <th>Titolo</th>
                <th>Isbn</th>
                <th>Autore</th>
                <th>Volume</th>
            </tr>
            </thead>
            <tbody>
            {% for book in reservation.books  %}
            <tr>
                <td>{{ book.title }}</td>
                <td>{{ book.isbn }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.volume }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>


    {% else %}
        <p class="text-danger">il Richiedente ha caricato un file, controllare nella mail.</p>
    {% endif %}
