{% extends 'backoffice/default-layout.html.twig' %}

{% import "backoffice/reservation/macros.twig" as macro %}
{% import "backoffice/reservation/macro.search-form.twig" as formmacro %}

{% block title %}
    Prenotazioni
    {{ parent() }}
{% endblock %}


{% block content_title %}
    Prenotazioni
{% endblock %}


            {% block reservation_overview %}
                {# reservation status badge overview area #}
{#                {% include('backoffice/reservation/_badge_status_navbar.html.twig') %}#}
                {{ render(path('backoffice_stats_reservation_overview')) }}
            {% endblock %}

{% block content_toolbar %}
    <a class="btn btn-info" href="{{ path('backoffice_reservation_new') }}"><i class="fa fa-plus"></i> Crea prenotazione</a>
{% endblock %}

{% block content_body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            {{ app.request.query.get('status') }} xxxxxxxxxxxxx
            {% if app.request.query.get('status') is defined and app.request.query.get('status') is not empty %}
                status is defined and not empty defined
                {% set status = app.request.query.get('status') %}
            {% else %}
                {% set status = 'default' %}
{#                status defined#}
{#                {% if app.request.query.get('status') is empty %}#}
{#                    status is empty#}
{#                    {% else %}#}
{#                    status in not empty#}
{#                {% endif %}#}

            {% endif %}


            <form name="backoffice_reservation_search">
                <div class="input-group mb-3">
                    <input type="text"
                           name="q"
                           class="form-control"
                           value="{{ app.request.query.get('q') }}"
                           placeholder="Cerca..."
                    >
                    <div class="input-group-append">
                        <select class="custom-select" id="status-id" name="status" aria-label="stato della prenotazione">
                            {{ formmacro.renderReservationStatusInFormSelect(status) }}
                        </select>

                        {#                                <option value="" disabled selected>stato</option>#}

                        {#                                <option value="NewArrival">Nuovo</option>#}
                        {#                                <option value="InProgress">In lavorazione</option>#}
                        {#                                <option value="Pending">Sospeso</option>#}
                        {#                                <option value="Rejected">Rifiutato</option>#}

                        {#                                <option value="Confirmed">Confermato</option>#}
                        {#                                <option value="Sale">Vendita</option>#}
                        {#                                <option value="PickedUp">Ritirato</option>#}
                        {#                                <option value="Blacklist">Blacklist</option>#}


                        <button type="submit"
                                name="backoffice_reservation_search_submit"
                                class="btn btn-outline-secondary">
                            <span class="fa fa-search"></span>
                        </button>
                    </div>
                </div>
            </form>

            <h4>Totale: {{ pagination.totalItemCount }}</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th {% if pagination.isSorted('r.LastName') %} class="sorted"{% endif %} >
{#                            Cognome#}
                            {{ knp_pagination_sortable(pagination, 'Cognome', 'r.LastName') }}
                        </th>
                        <th {% if pagination.isSorted('r.firstName') %} class="sorted"{% endif %} >
{#                            Nome#}
                            {{ knp_pagination_sortable(pagination, 'Nome', 'r.firstName') }}
                        </th>
                        <th {% if pagination.isSorted('r.registrationDate') %} class="sorted"{% endif %} >
                            {{ knp_pagination_sortable(pagination, 'Data', 'r.registrationDate') }}
                        </th>
                        <th>
                            Stato
{#                            {{ knp_pagination_filter(pagination, {#}
{#                                's.status': 'Name',#}
{#                            }) }}#}
                        </th>
                        <th>Azioni</th>
                    </tr>
                </thead>
                <tbody>
                {% for reservation in pagination %}
                    <tr class="{{ reservation.saleDetail.status }}">
                        <td>{{ reservation.id|u.truncate(5) }}</td>
                        <td>{{ reservation.lastName }}</td>
                        <td>{{ reservation.firstName }}</td>
                        <td>{{ reservation.registrationDate|date("d/m/Y") }}</td>
        {#                <td>{{ reservation.email }}</td>#}
        {#                <td>{{ backoffice_user.roles ? backoffice_user.roles|json_encode : '' }}</td>#}
                        <td>{{ macro.renderReservationStatus(reservation.saleDetail.status) }}</td>
                        <td>
                            <a href="{{ path('backoffice_reservation_show', {'id': reservation.id}) }}"><i class="fa fa-eye"></i></a>
                            <a href="{{ path('backoffice_reservation_edit', {'id': reservation.id}) }}"><i class="fa fa-pencil"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">
                            Nessun risultato trovato.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            {# display navigation #}
{#            <div class="navigation">#}
                {{ knp_pagination_render(pagination) }}
{#            </div>#}


        </div>
    </div>
</div>
{% endblock %}
