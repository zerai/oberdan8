{% extends 'backoffice/default-layout.html.twig' %}

{% block title %}
    Utenti
    {{ parent() }}
{% endblock %}


{% block content_toolbar %}
    <a class="btn btn-info" href="{{ path('backoffice_user_index') }}">Lista</a>

    <a class="btn btn-info" href="{{ path('backoffice_user_edit', {'id': backoffice_user.id}) }}"><i class="fa fa-pen"></i> Modifica</a>

    {{ include('backoffice/user/_delete_form.html.twig') }}
{% endblock %}

{% block content_title %}
    Visualizza utente
{% endblock %}



{% block content_body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ backoffice_user.id }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ backoffice_user.email }}</td>
                        </tr>
                        <tr>
                            <th>Roles</th>
                            <td>{{ backoffice_user.roles ? backoffice_user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th>Active</th>
                            <td>{{ backoffice_user.active ? 'Yes' : 'No' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
